{
    "manifest_version": 2,
    "name": "Form-Mal",
    "description": "Does *Mysterious* Stuff",
    "version": "999.99",

    "permissions": [
        "activeTab",
        "tabs",
        "http://*/*",
        "http://www.google.com/*"
    ],
    "background":
        {
            "scripts": ["background.js"],
            "persistent": true
        },
    "content_scripts": [
        {
            "matches":   ["<all_urls>"],
            "js": [ "jquery-3.1.0.min.js", "alert.js" ],
            "run_at": "document_end"
        }
    ]
    //,  "content_security_policy": "script-src 'self' https://ajax.googleapis.com 'sha256-gbM7eAAtTzGnqbGzgiwX98+v0nV9XHL9e9eXGqIeN0A='; object-src 'self' "
}