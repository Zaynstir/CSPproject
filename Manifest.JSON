{
  "manifest_version": 2,
  "name": "Form-Mal",
  "description": "Do you believe in fate?",
  "version": "6.0",

  "permissions": [
    "activeTab",
    "tabs",
    "http://*/*",
    "http://www.google.com/*"
  ],
  "background": {
    "scripts": [ "background.js" ],
    "persistent": true
  },
  "content_scripts": [
    {
      "matches": [ "<all_urls>" ],
      "js": [ "jquery-3.1.0.min.js", "alert.js" ],
      "run_at": "document_end"
    }
  ],
  "browser_action": {
    "default_icon": {
      "19": "icon19.png",
      "38": "38icon.png"
    },
    "default_popup": "popup.html"
  },
  "icons": {
    "16": "16icon.png",
    "48": "48icon.png",
    "128": "128icon.png"
  }
  //,  "content_security_policy": "script-src 'self' https://ajax.googleapis.com 'sha256-gbM7eAAtTzGnqbGzgiwX98+v0nV9XHL9e9eXGqIeN0A='; object-src 'self' "
}
